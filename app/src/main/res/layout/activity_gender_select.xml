<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenderSelect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="139dp"
            app:srcCompat="@drawable/rutina" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Â¿Eres Hombre o Mujer?"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryText"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView11" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="210dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/button_female"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="btnFemale"
                    app:srcCompat="@drawable/female_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="208dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/button_male"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="btnMale"
                    app:srcCompat="@drawable/male_icon" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siguiente" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>