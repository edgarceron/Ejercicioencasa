<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".muscular">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="354dp"
        tools:layout_editor_absoluteY="159dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            app:srcCompat="@drawable/rutina" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="¿En qué músculos te gustaría enfocarte?"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/colorSecondaryText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="468dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.chip.Chip
                    android:id="@+id/muscle_piernas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Piernas" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/muscle_espalda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Espalda" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/muscle_abdomen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abdomen" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/muscle_brazos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brazos" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/muscle_pectorales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pectorales" />
            </LinearLayout>

            <Space
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>